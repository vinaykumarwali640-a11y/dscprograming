#include <stdio.h>

int main() {
    int arr[10], i;
    int pos = 0, neg = 0, even = 0, odd = 0;

    // Reading array elements
    printf("Enter 10 elements:\n");
    for (i = 0; i < 10; i++) {
        scanf("%d", &arr[i]);
    }

    // Counting
    for (i = 0; i < 10; i++) {
        if (arr[i] > 0)
            pos++;
        else if (arr[i] < 0)
            neg++;

        if (arr[i] % 2 == 0)
            even++;
        else
            odd++;
    }

    // Printing results
    printf("Positive numbers = %d\n", pos);
    printf("Negative numbers = %d\n", neg);
    printf("Even numbers     = %d\n", even);
    printf("Odd numbers      = %d\n", odd);

    return 0;
}
